<div class="max-w-md mx-auto bg-white p-6 rounded-lg shadow">
  <h2 class="text-xl font-bold mb-4">新規登録</h2>

  <%= form_for(resource, as: resource_name, url: user_registration_path, html: { class: "space-y-4" }) do |f| %>
    <div>
      <%= f.label :name, class: "block font-medium" %>
      <%= f.text_field :name, class: "form-input w-full" %>
    </div>

    <div>
      <%= f.label :email, class: "block font-medium" %>
      <%= f.email_field :email, autofocus: true, class: "form-input w-full" %>
    </div>

    <div>
      <%= f.label :password, class: "block font-medium" %>
      <%= f.password_field :password, autocomplete: "off", class: "form-input w-full" %>
    </div>

    <div>
      <%= f.label :password_confirmation, class: "block font-medium" %>
      <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-input w-full" %>
    </div>

    <%= f.submit "登録する", class: "bg-blue-500 hover:bg-blue-600 text-white font-bold py-2 px-4 rounded" %>
  <% end %>
</div>
