<div class="container d-flex justify-content-center align-items-center min-vh-100">
  <div class="card shadow-sm p-4" style="width: 100%; max-width: 400px;">
    <h2 class="mb-4 text-center text-primary">アカウント作成</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <div class="mb-3">
        <%= f.label :email, "メールアドレス", class: "form-label" %>
        <%= f.email_field :email, autofocus: true, class: "form-control" %>
      </div>

      <div class="mb-3">
        <%= f.label :password, "パスワード", class: "form-label" %>
        <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
      </div>

      <div class="mb-4">
        <%= f.label :password_confirmation, "パスワード（確認）", class: "form-label" %>
        <%= f.password_field :password_confirmation, class: "form-control" %>
      </div>

      <%= f.submit "登録する", class: "btn btn-primary w-100" %>
    <% end %>

    <div class="mt-3 text-center">
      <%= link_to "ログインはこちら", new_user_session_path, class: "text-decoration-none" %>
    </div>
  </div>
</div>
