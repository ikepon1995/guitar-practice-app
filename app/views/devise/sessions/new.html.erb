<div class="container d-flex justify-content-center align-items-center min-vh-100">
  <div class="card shadow-sm p-4" style="width: 100%; max-width: 400px;">
    <h2 class="mb-4 text-center text-primary">ログイン</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="mb-3">
        <%= f.label :email, "メールアドレス", class: "form-label" %>
        <%= f.email_field :email, autofocus: true, class: "form-control" %>
      </div>

      <div class="mb-4">
        <%= f.label :password, "パスワード", class: "form-label" %>
        <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
      </div>

      <div class="d-grid mb-3">
        <%= f.submit "ログイン", class: "btn btn-primary w-100" %>
      </div>
    <% end %>

    <div class="text-center">
      <%#= link_to "パスワードをお忘れですか？", new_user_password_path, class: "text-decoration-none d-block" %>
      <%= link_to "新規登録はこちら", new_user_registration_path, class: "text-decoration-none d-block mt-2" %>
    </div>
  </div>
</div>
