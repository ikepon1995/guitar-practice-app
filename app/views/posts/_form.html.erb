<%= form_with(model: post, local: true) do |form| %>
  <div class="mb-3">
    <%= form.label :title, "タイトル" %>
    <%= form.text_field :title, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :body, "内容" %>
    <%= form.text_area :body, class: "form-control", rows: 6 %>
  </div>

  <%= form.submit class: "btn btn-primary" %>
<% end %>
