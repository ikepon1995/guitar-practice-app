<h1 class="text-2xl font-bold mb-4">投稿一覧</h1>

<%= link_to "新規投稿", new_post_path, class: "bg-blue-500 text-white px-4 py-2 rounded" if user_signed_in? %>

<div class="mt-6 space-y-4">
  <% @posts.each do |post| %>
    <div class="p-4 border rounded bg-white shadow">
      <h2 class="text-xl font-semibold"><%= link_to post.title, post_path(post), class: "text-indigo-600 hover:underline" %></h2>
      <p class="text-gray-700 mt-2"><%= truncate(post.body, length: 100) %></p>
      <p class="text-sm text-gray-500 mt-1">投稿者: <%= post.user.name %></p>
    </div>
  <% end %>
</div>
